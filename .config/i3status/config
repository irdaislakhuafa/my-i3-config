general {
    	colors = true
	color_good = "#3498db"
	color_degraded = "#ffff00"
	color_bad = "#f2eb24"
	interval = 2
}


#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"

# show brightness
order += "read_file BRIGHTNESS"

order += "disk /"
#order += "load"


# show cpu
order += "cpu_usage"
order += "cpu_temperature 0"

# order nenory
order += "memory"
#order += "free"

order += "tztime local"


# read brightness
read_file BRIGHTNESS {
	format = "Brightness %content"
	color_good = "#ffffff"
	path = "/sys/class/backlight/intel_backlight/brightness"
}

# cpu temp
cpu_temperature 0 {
	format = "ðŸŒ¡ï¸ %degreesÂ°C"
}

# cpu usage
cpu_usage {
	format = "CPU %usage {%cpu0 %cpu1 %cpu2 %cpu3}"
	max_threshold = "65"
}

wireless _first_ {
	format_up = "Wifi %essid > %quality > %ip"
	format_down = "Wifi zZ"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = ""
}

